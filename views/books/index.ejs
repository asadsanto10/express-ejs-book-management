<h2>All Books</h2>
<form action="/books" method="GET">
  <div>
    <label for="">Title</label>
    <input type="text" name="title" value="<%= serachBook.title %>" />
  </div>

  <div>
    <label for="">Publish after</label>
    <input
      type="date"
      name="publishAfter"
      value="<%= serachBook.publishAfter %>"
    />
  </div>

  <div>
    <label for="">Publish before</label>
    <input
      type="date"
      name="publishBefore"
      value="<%= serachBook.publishBefore %>"
    />
  </div>

  <button type="submit">Search</button>
</form>

<div>
  <% books.forEach(book => { %>

  <img height="auto" width="15%" src="<%= book.coverImagePath %>" />
  <% }) %>
</div>
